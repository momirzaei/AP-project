        </Grid>
        <Grid Grid.Row="2">
            <TextBlock FontSize="30">donation :</TextBlock>
            <TextBox x:Name="BANKDONATION" Height="46" FontSize="30" Text="" Margin="166,22,209,203"  Background="Aqua"/>
            <Button x:Name="BANKENTER" Content="ENTER" FontSize="30" Margin="136,136,134,64" Click="BANKENTER_Click"/>
        </Grid>

    </Grid>
</Window>

